<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="text"
            type="java.lang.String" />

        <variable
            name="iconSource"
            type="android.graphics.drawable.Drawable" />

    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_day"
        android:elevation="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:outlineProvider="bounds"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src='@{iconSource, default = @drawable/ic_weather_state_cloudy}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@{text}"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="1.007Mbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{text}"
            tools:text="humidity" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:id="@+id/valueMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                tools:text="33°C"
                app:degreeValue='@{35}'
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_height="wrap_content"
                android:layout_width="8dp"
                app:srcCompat="@drawable/ic_arrow_up"
                android:layout_toEndOf="@+id/valueMin"
                android:layout_alignTop="@+id/valueMin"
                android:layout_alignBottom="@+id/valueMin"
                android:scaleType="fitCenter"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="32°C"
                app:degreeValue='@{35.0}'
                android:textSize="12sp"
                android:layout_toStartOf="@+id/arrow_down"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_down"
                android:layout_height="wrap_content"
                android:layout_width="8dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_arrow_down"
                android:layout_alignTop="@+id/valueMin"
                android:layout_alignBottom="@+id/valueMin"
                android:scaleType="fitCenter"
                />

        </RelativeLayout>
    </LinearLayout>
</layout>